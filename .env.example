# Clermont Flood Dashboard - Environment Variables
# Copy this file to .env.local and fill in the values

# ===========================================
# API Configuration
# ===========================================

# Queensland Water Monitoring Information Portal
NEXT_PUBLIC_WMIP_BASE_URL=https://water-monitoring.information.qld.gov.au/cgi/webservice.exe

# Bureau of Meteorology Water Data
NEXT_PUBLIC_BOM_WATERDATA_URL=https://www.bom.gov.au/waterdata/services

# BOM Flood Warnings Feed
NEXT_PUBLIC_BOM_WARNINGS_URL=https://www.bom.gov.au/fwo/IDQ60000.warnings_qld.xml

# ===========================================
# Application Settings
# ===========================================

# Environment: development | production
NODE_ENV=development

# Enable mock data fallback (disable in production)
NEXT_PUBLIC_ENABLE_MOCK_DATA=true

# Data refresh interval in milliseconds (default: 5 minutes)
NEXT_PUBLIC_REFRESH_INTERVAL=300000

# Stale data threshold in milliseconds (default: 2 hours)
NEXT_PUBLIC_STALE_THRESHOLD=7200000

# ===========================================
# Rate Limiting
# ===========================================

# Maximum API requests per minute per IP
RATE_LIMIT_MAX_REQUESTS=60

# Rate limit window in milliseconds (default: 1 minute)
RATE_LIMIT_WINDOW_MS=60000

# ===========================================
# Monitoring (Optional)
# ===========================================

# Sentry DSN for error tracking (optional)
# NEXT_PUBLIC_SENTRY_DSN=

# Analytics ID (optional)
# NEXT_PUBLIC_ANALYTICS_ID=
